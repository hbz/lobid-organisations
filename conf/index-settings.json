{
	"settings": {
		"index": {
			"max_result_window": "25000",
			"analysis": {
				"analyzer": {
					"default": {
						"type" : "custom",
						"tokenizer" : "hyphen_tokenizer",
						"filter": ["lowercase", "german_filter", "hyphen_filter"]
					},
					"autocomplete": {
						"tokenizer": "edge_ngram_tokenizer",
						"filter": ["lowercase", "german_filter"]
					}, 
					"id": {
						"tokenizer": "keyword",
						"filter": "lowercase"
					}
				}, 
				"tokenizer": {
					"edge_ngram_tokenizer": {
						"type": "edgeNGram", 
						"min_gram": "1", 
						"max_gram": "40", 
						"token_chars": [
							"letter", 
							"digit"
						]
					},
					"hyphen_tokenizer" : {
						"type" : "hyphen"
					}
				},
				"filter" : {
					"german_filter" : {
						"type" : "snowball",
						"language" : "German2"
					},
					"hyphen_filter" : {
						"type" : "hyphen"
					}
				}
			}
		}
	}, 
	"mappings": {
		"organisation": {
			"properties": {
				"name": {
					"type": "string", 
					"analyzer": "autocomplete", 
					"search_analyzer": "default"
				}, 
				"location": {
					"properties": {
						"geo": {
							"type": "geo_point",
							"fields": {
								"raw": {
									"type": "string",
									"index": "not_analyzed"
								}
							}
						}
					}
				}, 
				"id": {
					"analyzer": "id",
					"type": "string"
				},
				"isil": {
					"analyzer": "id",
					"type": "string"
				},
				"type" : {
					"type": "string",
					"fields": {
						"raw": {
							"type": "string",
							"index": "not_analyzed"
						}
					}
				},
				"classification" : {
					"properties": {
						"label": {
							"type": "string",
							"fields": {
								"raw": {
									"type": "string",
									"index": "not_analyzed"
								}
							}
						}
					}
				},
				"fundertype" : {
					"properties": {
						"label": {
							"type": "string",
							"fields": {
								"raw": {
									"type": "string",
									"index": "not_analyzed"
								}
							}
						}
					}
				},
				"stocksize" : {
					"properties": {
						"label": {
							"type": "string",
							"fields": {
								"raw": {
									"type": "string",
									"index": "not_analyzed"
								}
							}
						}
					}
				}
			}
		}
	}
}
